@model AddMemberviewModel

<div id="addMemberModal" class="modal">
    <div class="card">
        <div class="card-header">
            <h3>Add Member</h3>
            <button type="button" class="btn-close" data-type="close" data-close="true" data-target="#addMemberModal"></button>
        </div>
        <div class="card-body">

            <form asp-controller="Members" asp-action="Create" method="post" enctype="multipart/form-data" novalidate>
                <input type="hidden" name="returnUrl" value="@ViewBag?.ReturnUrl" />

                <div class="form-group">
                    <label asp-for="ProfileImage"></label>
                    <input asp-for="ProfileImage" accept="/*" />
                </div>

            <div class="form-group">
                <div class="field-label-group">
                    <label asp-for="FirstName"></label>
                        <span asp-validation-for="FirstName"></span>
                </div>
                    <input asp-for="FirstName" />
            </div>

                <div class="form-group">
                    <div class="field-label-group">
                        <label asp-for="LastName"></label>
                        <span asp-validation-for="LastName"></span>
                    </div>
                    <input asp-for="LastName" />
                </div>

                <div class="form-group">
                    <div class="field-label-group">
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email"></span>
                    </div>
                    <input asp-for="Email" />
                </div>

                <div class="form-group">
                    <div class="field-label-group">
                    <label asp-for="RoleId"></label>
                    <span asp-validation-for="RoleId"></span>
                </div>
                    <select asp-for="RoleId" asp-items="Model!.Roles"></select>
                </div>

                @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
                {
                    <div class="alert-notification error">
                        @ViewBag?.ErrorMessage
                    </div>
                }

                <div class="form-group">
                    <button type="submit" class="btn btn-submit">Add Member</button>
                </div>
            </form>
        </div>
        <div class="card-footer"></div>
    </div>
</div>

