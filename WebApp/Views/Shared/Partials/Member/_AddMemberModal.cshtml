@model AddMemberviewModel

<div id="addMemberModal" class="modal">
    <div class="card">
        <div class="card-header">
            <h3>Add Member</h3>
            <button type="button" class="btn-close" data-type="close" data-close="true" data-target="#addMemberModal"></button>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
            {
                <div class="alert-notification error">
                    @ViewBag?.ErrorMessage
                </div>
            }

            <form asp-controller="Members" asp-action="Create" method="post" enctype="multipart/form-data" novalidate>
                <input type="hidden" name="returnUrl" value="@ViewBag?.ReturnUrl" />

                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" value="@Model?.FirstName" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" value="@Model?.LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" value="@Model?.Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RoleId"></label>
                    <select asp-for="RoleId" asp-items="Model!.Roles"></select>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-submit">Add Member</button>
                </div>
            </form>
        </div>
        <div class="card-footer"></div>
    </div>
</div>
